<!DOCTYPE html>
<html lang="id">
  <head>
    <%- include('partials/head', { title: 'Login', subtitle: 'LOGIN' }) %>
    <!-- DaisyUI (opsional, untuk komponen siap pakai) -->
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="gov-bg min-h-screen">
    <div
      class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8"
    >
      <div
        class="w-full max-w-md bg-white/90 dark:bg-govnavy/80 dark:border-slate-700 dark:text-slate-100
           rounded-2xl shadow-lg border border-slate-200 backdrop-blur-sm p-6 sm:p-8"
        >
        <!-- Logo & Title -->
        <div class="flex flex-col items-center mb-6">
          <img
            src="/assets/logo-kalteng.png"
            alt="DIGI LAPOR"
            class="w-14 h-18 mb-3"
          />
          <h1
            class="text-xl sm:text-2xl font-extrabold tracking-wide
                   bg-gradient-to-r from-blue-700 to-indigo-600
                   text-transparent bg-clip-text text-center"
          >
            DIGI LAPOR
          </h1>
          <p class="text-xs sm:text-sm text-gray-500 text-center mt-1">
            Sistem Digital dan Laporan Realtime
          </p>
        </div>

        <!-- Error -->
        <% if (error) { %>
        <div class="alert alert-error mb-5 shadow-sm text-sm">
          <span><%= error %></span>
        </div>
        <% } %>

        <!-- Form -->
        <form action="/auth/login" method="POST" class="space-y-4">
          <!-- Username -->
          <div class="form-control">
            <label class="label">
              <span class="label-text text-xs sm:text-sm font-medium"
                >Username</span
              >
            </label>
            <input
              type="text"
              name="username"
              required
              class="input input-bordered w-full text-sm"
              placeholder="Masukkan username"
            />
          </div>

          <!-- Password -->
          <div class="form-control">
            <label class="label">
              <span class="label-text text-xs sm:text-sm font-medium"
                >Password</span
              >
            </label>
            <input
              type="password"
              name="password"
              required
              class="input input-bordered w-full text-sm"
              placeholder="Masukkan password"
            />
          </div>

          <!-- Submit -->
          <button
            type="submit"
            class="btn btn-primary w-full mt-2 text-sm sm:text-base font-semibold tracking-wide"
          >
            Masuk
          </button>
        </form>

        <!-- Footer -->
        <p class="text-center text-[11px] text-gray-500 mt-6">
          Â© <%= new Date().getFullYear() %> Pemerintah Provinsi Kalimantan Tengah
        </p>
      </div>
    </div>
  </body>
</html>
