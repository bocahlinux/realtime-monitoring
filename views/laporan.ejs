<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Laporan Realisasi Pajak Daerah</title>
  <style>
    body {
      font-family: "Poppins", sans-serif;
      background: #f8fafc;
      color: #111827;
      padding: 20px;
    }
    h2 {
      text-align: center;
      color: #047857;
    }
    table {
      border-collapse: collapse;
      width: 100%;
      font-size: 13px;
      margin-top: 10px;
    }
    th, td {
      border: 1px solid #cbd5e1;
      padding: 6px 8px;
      text-align: right;
    }
    th {
      background: #047857;
      color: white;
      text-align: center;
    }
    tr:nth-child(even) { background-color: #f1f5f9; }
    .header { background: #e2e8f0; font-weight: bold; }
    .highlight {
      background-color: #bbf7d0;
      transition: background 0.6s ease;
    }
  </style>
</head>
<body>
  <h2>LAPORAN REALISASI PAJAK DAERAH PROV. KALTENG</h2>
  <p style="text-align:center;">UPT PPD BAPENDA PALANGKA RAYA â€” Per Tanggal <%= tanggal %></p>

  <table id="laporan">
    <thead>
      <tr>
        <th rowspan="2">URAIAN</th>
        <th colspan="2">PENERIMAAN</th>
        <th rowspan="2">REALISASI</th>
        <th rowspan="2">%</th>
        <th rowspan="2">SISA TARGET</th>
        <th colspan="4">JUMLAH UNIT</th>
      </tr>
      <tr>
        <th>S/D HARI LALU</th>
        <th>HARI INI</th>
        <th>RODA 2</th>
        <th>RODA 4</th>
        <th>ONLINE</th>
        <th>TOTAL</th>
      </tr>
    </thead>
    <tbody id="data-body">
      <% data.forEach(d => { 
        const realisasi = d.sdLalu + d.hariIni;
        const persen = ((realisasi / d.target) * 100).toFixed(2);
        const sisa = d.target - realisasi;
      %>
      <tr>
        <td style="text-align:left;"><%= d.uraian %></td>
        <td><%= d.sdLalu.toLocaleString('id-ID') %></td>
        <td class="today"><%= d.hariIni.toLocaleString('id-ID') %></td>
        <td><%= realisasi.toLocaleString('id-ID') %></td>
        <td><%= persen %>%</td>
        <td><%= sisa.toLocaleString('id-ID') %></td>
        <td><%= d.unit.roda2 %></td>
        <td><%= d.unit.roda4 %></td>
        <td><%= d.unit.online %></td>
        <td><%= d.unit.roda2 + d.unit.roda4 + d.unit.online %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    async function updateTable() {
      const res = await fetch("/api/data");
      const data = await res.json();
      const tbody = document.getElementById("data-body");
      tbody.innerHTML = "";
      data.forEach((d) => {
        const realisasi = d.sdLalu + d.hariIni;
        const persen = ((realisasi / d.target) * 100).toFixed(2);
        const sisa = d.target - realisasi;

        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td style="text-align:left;">${d.uraian}</td>
          <td>${d.sdLalu.toLocaleString("id-ID")}</td>
          <td class="today">${d.hariIni.toLocaleString("id-ID")}</td>
          <td>${realisasi.toLocaleString("id-ID")}</td>
          <td>${persen}%</td>
          <td>${sisa.toLocaleString("id-ID")}</td>
          <td>${d.unit.roda2}</td>
          <td>${d.unit.roda4}</td>
          <td>${d.unit.online}</td>
          <td>${d.unit.roda2 + d.unit.roda4 + d.unit.online}</td>
        `;
        tbody.appendChild(tr);
      });

      document.querySelectorAll(".today").forEach(td => {
        td.classList.add("highlight");
        setTimeout(() => td.classList.remove("highlight"), 1200);
      });
    }

    // Auto-refresh setiap 5 detik
    setInterval(updateTable, 5000);
  </script>
</body>
</html>
