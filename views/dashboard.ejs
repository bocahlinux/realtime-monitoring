<!DOCTYPE html>
<html lang="id">
  <head>
    <%- include('partials/head', { title: title || "Dashboard" }) %>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="flex">
      <!-- Sidebar -->
      <%- include('partials/sidebar') %>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col">
        <%- include('partials/navbar', { title: title || "Dashboard" }) %>

        <main class="flex-1 p-6 space-y-6">
          <!-- Header + Tanggal -->
          <section class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <div>
              <h1 class="text-2xl font-semibold text-gray-800">
                Dashboard Penerimaan
              </h1>
              <p class="text-sm text-gray-500">
                Ringkasan penerimaan PKB dan BBNKB per hari dan per UPT.
              </p>
            </div>
            <div class="text-sm text-right text-gray-500">
              <p>Hari ini:
                <span class="font-semibold" id="label-hari-ini">-</span>
              </p>
              <p class="text-xs">
                Kemarin:
                <span id="label-kemarin">-</span>
              </p>
              <p class="text-xs">
                Terakhir dimuat:
                <span id="last-update">-</span>
              </p>
            </div>
          </section>

          <!-- Kartu Ringkasan Utama -->
          <section class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Total Hari Ini -->
            <div class="bg-white rounded-xl shadow p-5 flex flex-col gap-2">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-500">
                  Total Penerimaan Hari Ini
                </span>
                <span class="inline-flex items-center gap-1 text-xs px-2 py-1 rounded-full bg-green-50 text-green-700">
                  <i data-lucide="calendar"></i> Hari ini
                </span>
              </div>
              <p class="text-2xl md:text-3xl font-semibold text-green-600">
                Rp <span id="today-total">0</span>
              </p>
              <p class="text-xs text-gray-500">
                Pokok: Rp <span id="today-pokok">0</span> ·
                Denda: Rp <span id="today-denda">0</span> ·
                Unit: <span id="today-unit">0</span>
              </p>
            </div>

            <!-- Total Kemarin -->
            <div class="bg-white rounded-xl shadow p-5 flex flex-col gap-2">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-500">
                  Total Penerimaan Kemarin
                </span>
                <span class="inline-flex items-center gap-1 text-xs px-2 py-1 rounded-full bg-blue-50 text-blue-700">
                  <i data-lucide="rotate-ccw"></i> Kemarin
                </span>
              </div>
              <p class="text-2xl md:text-3xl font-semibold text-blue-600">
                Rp <span id="yesterday-total">0</span>
              </p>
              <p class="text-xs text-gray-500">
                Pokok: Rp <span id="yesterday-pokok">0</span> ·
                Denda: Rp <span id="yesterday-denda">0</span>
              </p>
            </div>

            <!-- Perbandingan -->
            <div class="bg-white rounded-xl shadow p-5 flex flex-col gap-2">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-500">
                  Perbandingan dengan Kemarin
                </span>
                <span
                  id="compare-badge"
                  class="inline-flex items-center gap-1 text-xs px-2 py-1 rounded-full bg-gray-100 text-gray-700"
                >
                  <i id="compare-icon" data-lucide="minus" class="w-3 h-3"></i>
                  <span id="compare-badge-text">Stabil</span>
                </span>
              </div>
              <p id="compare-diff" class="text-2xl md:text-3xl font-semibold text-gray-700">
                0
              </p>
              <p class="text-xs text-gray-500">
                <span id="compare-percent">0</span>% dibandingkan penerimaan kemarin
              </p>
            </div>
          </section>

          <!-- Ringkasan per Jenis Pajak -->
          <section class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-white rounded-xl shadow p-4">
              <p class="text-xs text-gray-500 flex items-center gap-2 mb-1">
                <i data-lucide="car" class="w-4 h-4"></i>
                <span>PKB Hari Ini (pokok + denda)</span>
              </p>
              <p id="today-pkb" class="text-xl font-semibold text-blue-600">
                Rp 0
              </p>
            </div>
            <div class="bg-white rounded-xl shadow p-4">
              <p class="text-xs text-gray-500 flex items-center gap-2 mb-1">
                <i data-lucide="receipt" class="w-4 h-4"></i>
                <span>BBNKB Hari Ini (pokok + denda)</span>
              </p>
              <p id="today-bbnkb" class="text-xl font-semibold text-indigo-600">
                Rp 0
              </p>
            </div>
            <div class="bg-white rounded-xl shadow p-4">
              <p class="text-xs text-gray-500 flex items-center gap-2 mb-1">
                <i data-lucide="credit-card" class="w-4 h-4"></i>
                <span>Jumlah Transaksi Hari Ini</span>
              </p>
              <p id="today-transaksi" class="text-xl font-semibold text-gray-800">
                0 transaksi
              </p>
            </div>
          </section>

          <!-- Ringkasan per Unit / UPT -->
          <section class="bg-white rounded-xl shadow p-5">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 mb-4">
              <div>
                <h2 class="text-lg font-semibold text-gray-800">
                  Ringkasan Penerimaan per UPT
                </h2>
                <p class="text-xs text-gray-500">
                  Menampilkan penerimaan hari ini, kemarin, dan akumulasi bulan ini per UPT.
                </p>
              </div>
              <div class="flex items-center gap-2 text-xs text-gray-500">
                <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-gray-100">
                  <span class="w-2 h-2 rounded-full bg-emerald-500"></span> Hari ini
                </span>
                <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-gray-100">
                  <span class="w-2 h-2 rounded-full bg-blue-500"></span> Bulan ini
                </span>
              </div>
            </div>

            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead class="bg-gray-100 text-gray-600 text-xs uppercase">
                  <tr>
                    <th class="px-3 py-2 text-left">Unit / UPT</th>
                    <th class="px-3 py-2 text-right">Hari Ini</th>
                    <th class="px-3 py-2 text-right">Kemarin</th>
                    <th class="px-3 py-2 text-right">Bulan Ini</th>
                    <th class="px-3 py-2 text-right">Δ Hari ini vs Kemarin</th>
                  </tr>
                </thead>
                <tbody id="unit-table-body" class="divide-y divide-gray-100">
                  <tr>
                    <td colspan="5" class="px-3 py-6 text-center text-gray-400 text-xs">
                      Memuat data...
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </section>
        </main>
      </div>
    </div>

    <script>
      // Inisialisasi ikon lucide
      lucide.createIcons();
    </script>
    <script src="js/dashboard.js"></script>
  </body>
</html>
