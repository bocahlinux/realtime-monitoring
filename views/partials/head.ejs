    0%   { opacity: 0; transform: translateY(-6px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  .animate-fadeSlide {
    animation: fadeSlide .18s ease-out;
  }

  .sidebar-open {
    transform: translateX(0) !important;
  }
  .sidebar-mini {
    width: 64px !important;
  }
