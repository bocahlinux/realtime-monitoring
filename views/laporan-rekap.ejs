<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Rekap Laporan Pajak Harian</title>
  <style>
    body { font-family: "Poppins", sans-serif; background: #f8fafc; padding: 20px; color: #1e293b; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; font-size: 13px; }
    th, td { border: 1px solid #cbd5e1; padding: 6px 8px; text-align: right; }
    th { background: #047857; color: white; }
    tr:nth-child(even){background:#f1f5f9}
    .today { background: #dcfce7; font-weight: 600; }
    .highlight { background: #bbf7d0; transition: background .6s ease; }
  </style>
</head>
<body>
  <h2 style="text-align:center;color:#047857;">LAPORAN REKAP PAJAK HARIAN</h2>
  <p style="text-align:center;">Per Tanggal <%= tanggal %></p>

  <table id="laporan">
    <thead>
      <tr>
        <th>Uraian</th>
        <% daftarTanggal.forEach(t => { %>
          <th><%= new Date(t).toLocaleDateString("id-ID",{day:'2-digit',month:'short'}) %></th>
        <% }) %>
        <th>Total</th>
        <th>Target</th>
        <th>%</th>
      </tr>
    </thead>
    <tbody id="data-body">
      <% data.forEach(d => { %>
        <tr>
          <td style="text-align:left;"><%= d.uraian %></td>
          <% daftarTanggal.forEach(t => { %>
            <td class="<%= t.endsWith('03') ? 'today' : '' %>"><%= d.perTanggal[t]?.toLocaleString('id-ID') || 0 %></td>
          <% }) %>
          <td><%= d.total.toLocaleString('id-ID') %></td>
          <td><%= d.target.toLocaleString('id-ID') %></td>
          <td><%= d.persen %>%</td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    async function refreshRealtime() {
      const res = await fetch("/api/realtime");
      const data = await res.json();
      const tbody = document.getElementById("data-body");
      tbody.innerHTML = "";

      data.forEach(d => {
        const row = document.createElement("tr");
        let html = `<td style="text-align:left;">${d.uraian}</td>`;
        <% daftarTanggal.forEach(t => { %>
          const val = d.perTanggal["<%= t %>"] || 0;
          const isToday = "<%= t %>" === "2025-11-03";
          html += `<td class="${isToday ? 'today highlight' : ''}">${val.toLocaleString('id-ID')}</td>`;
        <% }) %>
        html += `<td>${d.total.toLocaleString('id-ID')}</td>
                 <td>${d.target.toLocaleString('id-ID')}</td>
                 <td>${d.persen}%</td>`;
        row.innerHTML = html;
        tbody.appendChild(row);
      });
    }

    setInterval(refreshRealtime, 4000);
  </script>
</body>
</html>
